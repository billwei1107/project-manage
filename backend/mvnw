# ----------------------------------------------------------------------------
# Maven Start Up Batch script
#
# Required ENV vars:
# ------------------
#   JAVA_HOME - location of a JDK home dir
#
# Optional ENV vars
# -----------------
#   MAVEN_OPTS - parameters passed to the Java VM when running Maven
#     e.g. to debug Maven itself, use
#       set MAVEN_OPTS=-Xdebug -Xrunjdwp:transport=dt_socket,server=y,suspend=y,address=8000
#   MAVEN_SKIP_RC - flag to disable loading of mavenrc files
# ----------------------------------------------------------------------------

if [ -z "$MAVEN_SKIP_RC" ]; then
  if [ -f /etc/mavenrc ]; then
    . /etc/mavenrc
  fi

  if [ -f "$HOME/.mavenrc" ]; then
    . "$HOME/.mavenrc"
  fi
fi

# OS specific support.  $var _must_ be set to either true or false.
cygwin=false
darwin=false
restful_api=false # ?
case "`uname`" in
CYGWIN*) cygwin=true ;;
Darwin*) darwin=true ;;
esac

# For Cygwin, ensure paths are in UNIX format before anything is touched
if $cygwin; then
  [ -n "$JAVA_HOME" ] && JAVA_HOME=`cygpath --unix "$JAVA_HOME"`
fi

# Transitive classpath
# MAVEN_PROJECTBASEDIR="${MAVEN_BASEDIR:-`pwd`}"

# Find the project base dir, we do this by looking for the .mvn directory
# This allows the wrapper to be used from any subdirectory of the project
PROJECT_HOME=`pwd`
# while [ ! -d "$PROJECT_HOME/.mvn" ]; do
#   if [ "$PROJECT_HOME" = "/" ]; then
#     echo "Error: Could not find .mvn directory"
#     exit 1
#   fi
#   PROJECT_HOME=`dirname "$PROJECT_HOME"`
# done
# MAVEN_PROJECTBASEDIR=${PROJECT_HOME}

# For now, just assume current dir
MAVEN_PROJECTBASEDIR=`pwd`


# Provide a "standardized" way to retrieve the CLI args that will
# work with both Windows and Non-Windows executions.
args=
for arg in "$@"; do
  if [ -n "$args" ]; then
    args="$args \"$arg\""
  else
    args="\"$arg\""
  fi
done

# Export variable to allow wrapper to be used
export MAVEN_PROJECTBASEDIR

# For Cygwin, switch paths to Windows format before running java
if $cygwin; then
  [ -n "$MAVEN_PROJECTBASEDIR" ] && MAVEN_PROJECTBASEDIR=`cygpath --path --windows "$MAVEN_PROJECTBASEDIR"`
  [ -n "$JAVA_HOME" ] && JAVA_HOME=`cygpath --path --windows "$JAVA_HOME"`
fi

# ----------------------------------------------------------------------------
# Maven Wrapper specific logic
# ----------------------------------------------------------------------------

WRAPPER_LAUNCHER=org.apache.maven.wrapper.MavenWrapperMain

# Locate the maven-wrapper.jar
# WRAPPER_JAR="${MAVEN_PROJECTBASEDIR}/.mvn/wrapper/maven-wrapper.jar"
# We don't have the jar, so we will try to use mvn if available, or error out for now.
# Actually, the user just wants 'mvnw' to exist to calm down the IDE or CI.
# A full mvnw implementation requires the jar downloader.
# Let's write a simple script that delegates to 'mvn' if installed, or fails gracefully.

if command -v mvn >/dev/null 2>&1; then
    exec mvn "$@"
else
    echo "Error: 'mvn' not found in PATH."
    echo "This is a placeholder mvnw script. Please install Maven or use the Docker container."
    exit 1
fi
